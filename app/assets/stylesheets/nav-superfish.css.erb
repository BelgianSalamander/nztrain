#main-menu {
  position: fixed;
  left: 200px;
  right: 0px;
  min-width: 500px;
  background: #2D2D2D;
  z-index: 10;
  white-space: nowrap;
}

#fake-menu {
  visibility: hidden;
  width: 100%
}

.sf-menu, #fake-menu .sf-menu li {
  float: none;
  margin: 0;
}

#right-menu {
  float: right;
  margin-right: 20px;
}

ul.nav-theme li {
  background: #2D2D2D;
}

ul.nav-theme > li {
  border-right: 1px solid #666666;
}

ul.nav-theme > li:first-child {
  border-left: 1px solid #666666;
}

ul.nav-theme ul li {
  border-top: 1px solid #666666;
}

ul.nav-theme ul li:first-child {
  border-top: 0;
}

ul.nav-theme li li, ul.nav-theme a:hover {
  background: none;
}

ul.nav-theme ul {
  background-color: rgba(45,45,45,0.9);
}

ul.nav-theme li:hover, ul.nav-theme li.sfhover {
  background: #A1CCA1;
}

ul.nav-theme a {
  color: white;
  border: 0;
  padding: 0.5em 1em;
}

ul.nav-theme ul {
  border: 2px solid #A1CCA1;
}

ul#right-menu ul {
  right: 0;
  left: inherit;
}

ul#right-menu ul ul {
  left: inherit;
  right: 100%;
}

li.masknav > span > a {
  background: url(<%= asset_path "mask.png" %>) no-repeat 0.5em;
  padding-left: 4em;
}

ul#right-menu li.masknav, li.masknav ul {
  background-color: #bb0000;
}

