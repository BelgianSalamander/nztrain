<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Admin:</b>
  <%= @user.is_admin %>
</p>

<p>
<b>Brownie Points: </b>
<%= @user.brownie_points %>
</p>

<p>
<b> <%= @solved_problems.size %> solved problems: </b>
<ul>
<% @solved_problems.each do |prob| %>
  <li>
  <%= link_to prob.title, prob %>
  </li>
<% end %>
</ul>
</p>

<% if current_user.is_admin %>
  <%= render 'admin' %>
<% end %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
