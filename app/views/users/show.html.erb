<% content_for :title, @user.handle %>
<b>Name:</b>
<%= @user.name %>
<br />

<b>Email:</b>
<%= @user.email %>
<br />

<b>Admin:</b>
<%= @user.is_admin %>
<br />

<b>Brownie Points:</b>
<%= @user.brownie_points %>
<br />
<br />

<b> <%= @solved_problems.size %> solved problems: </b>
<ul>
<% @solved_problems.each do |prob| %>
  <li>
  <%= link_to prob.title, prob %>
  </li>
<% end %>
</ul>
<br />
<b> Roles: </b>
<% @user.roles.each_with_index do |role, i|%><%= ', ' if i > 0 %><%= role.name %> <%= raw "(#{link_to 'remove', remove_role_user_path(@user, :role_id => role.id), :method => "put"})" if can? :revoke, role %><% end %>

<%= render 'admin' %>

<%= link_to 'Edit', edit_user_path(@user) if can? :update, @user %>
<%= link_to 'Back', users_path %>
