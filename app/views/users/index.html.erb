<% content_for :title, "Users" %>
<div id="main-page-title">Listing users</div>
<% if permitted_to? :su, User %>
  <%= render :partial => 'su', :formats => [:js] %>
<% end %>
<table class="main_table hoverable selectable">
  <thead>
    <tr>
      <th>Username</th>
      <% if permitted_to? :inspect, User %>
        <th>Name</th>
        <th>Email</th>
      <% end %>
      <th>Roles</th>
      <th>Solved Problems</th>
      <th>Brownie Points</th>
      <th></th>
      <% if permitted_to? :update, User %>
        <th></th>
      <% end %>
      <% if permitted_to? :destroy, User %>
        <th></th>
      <% end %>
      <% if permitted_to? :su, User %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <% if permitted_to? :inspect, user %>
          <td><%= user.name %></td>
          <td>
              <%= user.email %> <span style="color:red;"><%= "(unconfirmed)" if !user.confirmed? %></span>
          </td>
        <% end %>
        <td><%= user.roles.map {|r| r.name}.join(', ') %></td>
        <td><%= user.num_solved %></td>
        <td><%= user.brownie_points %></td>
        <td><%= link_to 'Show', user %></td>
        <% if permitted_to? :update, User %>
          <td><%= link_to 'Edit', edit_user_path(user) if permitted_to? :update, user%></td>
        <% end %>
        <% if permitted_to? :destroy, User %>
          <td><%= link_to 'Destroy', user, :data => { :confirm => 'Are you sure?' }, :method => :delete if permitted_to? :destroy, user %></td>
        <% end %>
        <% if permitted_to? :su, user %>
          <td><%= link_to "su", su_user_path(user), :rel => "facebox" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

