<% content_for :title, "Evaluators" %>

<table class="main_table hoverable selectable" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th></th>
      <% if permitted_to? :update, Evaluator %>
        <th></th>
      <% end %>
      <% if permitted_to? :destroy, Evaluator %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
<% @evaluators.each do |evaluator| %>
  <tr>
    <td><%= evaluator.name %></td>
    <td><%= evaluator.description %></td>
    <td><%= evaluator.owner_id %></td>
    <td><%= link_to 'Show', evaluator %></td>
    <% if permitted_to? :update, Evaluator %>
      <td><%= link_to 'Edit', edit_evaluator_path(evaluator) if permitted_to? :update, evaluator %></td>
    <% end %>
    <% if permitted_to? :destroy, Evaluator %>
      <td><%= link_to 'Destroy', evaluator, :data => { :confirm => 'Are you sure?' }, :method => :delete if permitted_to? :destroy, evaluator %></td>
    <% end %>
  </tr>
<% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Evaluator', new_evaluator_path if permitted_to? :create, :evaluators %>
