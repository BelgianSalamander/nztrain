<% content_for :title, @group.name %>
<% content_for :content do %>
  <table style="background-color: none; border: 0px; width: 100%; font-size: 150%;">
    <tr>
      <td><span style="font-size: 200%"><%= @group.memberships.count %> </span>members</td>
      <td><span style="font-size: 200%"><%= @group.problem_sets.count %> </span>problem sets</td>
    </tr>
  </table>
  <% if @group.members.exists?(current_user) %>
    <%= link_to 'Leave group', leave_group_path(@group), :method => :put if permitted_to? :leave, @group %>
  <% elsif permitted_to? :join, @group %>
    <%= link_to 'Join group', join_group_path(@group), :method => :put  %>
  <% elsif permitted_to? :apply, @group %>
    <%= link_to 'Apply to join', apply_group_path(@group), :method => :put  %>
  <% end %>
  <%= link_to 'Edit', edit_group_path(@group) if permitted_to? :update, @group %>
  <%=
#  SimpleNavigation::ItemContainer.new do |menu|
  render_navigation do |menu|
    menu.dom_class = :tab_menu
    menu.item :info, "info", info_group_path(@group)
    menu.item :problems, "problems", group_path(@group) if permitted_to? :access_problems, @group
    menu.item :files, "files", group_files_path(@group) if permitted_to? :access_files, @group
    menu.item :contests, "contests", contests_group_path(@group) if permitted_to? :access_problems, @group
    menu.item :members, "members", members_group_path(@group), :highlights_on => %r(#{members_group_path(@group)}) if permitted_to? :access_problems, @group
#  end.render
  end
  %>
  <%= content_tag :div, :class => :tab_box do %>
    <%= yield %>
  <% end %>
<% end %>
<%= render :template => 'layouts/application' %>
