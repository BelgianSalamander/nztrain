<h1>Listing problems</h1>

<table>
  <tr class="jtable tr">
    <th>Title</th>
    <th>Input</th>
    <th>Output</th>
    <th>Memory limit</th>
    <th>Time limit</th>
    <th>User</th>
    <th>Score</th>
    <th></th>
    <% if current_user.is_admin %>
      <th></th>
      <th></th>
    <% end %>
  </tr>

<% @problems.each do |problem| %>
  <tr>
    <td><%= problem.title %></td>
    <td><%= problem.input %></td>
    <td><%= problem.output %></td>
    <td><%= problem.memory_limit %></td>
    <td><%= problem.time_limit %></td>
    <td><%= problem.user_id %></td>
    <td><%= problem.score %></td>
    <td><%= link_to 'Show', problem %></td>
    <% if current_user.is_admin %>
      <td><%= link_to 'Edit', edit_problem_path(problem) %></td>
      <td><%= link_to 'Destroy', problem, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if current_user.is_admin %>
  <%= link_to 'New Problem', new_problem_path %>
<% end %>
