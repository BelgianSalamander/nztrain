<% content_for :title, "Problems" %>
<% toolbox_push :new, new_problem_path if permitted_to? :create, :problems %>

<% fields = [{title: :linked_title}, :input, :output, :memory_limit, :time_limit, {owner: :linked_owner}, {progress: :progress_bar}, {"" => :edit_link}, {"" => :destroy_link}] %>
<table class="main_table">
  <thead>
    <tr>
      <% @problems_presenter.visible? *fields do |field| %>
        <th><%= "#{field}".humanize %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
<% @problems_presenter.each do |problem_presenter| %>
  <tr>
    <% problem_presenter.presents *fields do |value| %>
      <%= content_tag :td, value %>
    <% end %>
  </tr>
<% end %>
  </tbody>
</table>

<br />

