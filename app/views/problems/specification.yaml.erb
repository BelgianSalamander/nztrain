# Specification for "<%= problem.title %>"
# 
# test_set:
#   points: number of points allocated (relative to all other sets)
#   visibility: (optional, default=private)
#     public: displayed as a sample test case, but feedback may be hidden
#     sample: equivalent to public + prerequisite
#     prerequisite: a prerequisite for scoring any points - feedback always given
#     private: feedback may be hidden in contests
#   test_cases: array of test case names
# 
# Example:
#
# # specification.yaml
# test_sets:
#   set1name: { points: 1, visibility: sample,  test_cases: [ case1 ] }
#   set2name: { points: 1, visibility: private, test_cases: [ case1, case2 ] }
#
# problem.zip
# ├── inputs/
# │   ├── case1.txt
# │   └── case2.txt
# ├── outputs/
# │   ├── case1.txt
# │   └── case2.txt
# └── specification.yaml

test_sets:
<% problem.test_sets.each do |set| %>
  <%= raw y set.name %>:
    points: <%= set.points %>
<%= "    visibility: #{TestSet::VISIBILITY[set.visibility]}\n" if set.visibility != TestSet::VISIBILITY[:private] -%>
    test_cases: [<%= raw set.test_cases.map{ |kase| y kase.name }.join(",") %>]
<% end %>

