<h1>
<%= @problem.title %>
</h1>

<p>
<%= markdown(@problem.statement) %>
</p>

<p>
<b>Input:</b>
<%= @problem.input %>
</p>

<p>
<b>Output:</b>
<%= @problem.output %>
</p>

<p>
<b>Memory limit:</b>
<%= @problem.memory_limit %>
</p>

<p>
<b>Time limit:</b>
<%= @problem.time_limit %>
</p>

<p>
<b>Your submissions:</b>
<table>
  <tr>
    <th>Date</th>
    <th>Score</th>
  </tr>

  <% @submissions.each do |sub| %>
    <tr>
      <td> <%= link_to sub.created_at, sub %> </td>
      <td> <%= sub.score %> </td>
    </tr>
  <% end %>
</table>
</p>

<p>
<b> Make new submission: </b>
<%= render 'submissions/form' %>
</p>

<% if current_user.is_admin %>
  <%= render 'admin' %>
<% end %>
<p>

<%= link_to 'Edit', edit_problem_path(@problem) %> |
<%= link_to 'Submit', new_submission_path(:problem => @problem.id) %> |
<%= link_to 'Back', problems_path %>
