<% content_for :title, "Editing #{@problem.title}" %>
<h1>Editing problem</h1>

<%= render 'form' %>

<p>
<%= form_tag( upload_zipped_test_case_path(:problem_id => @problem), :multipart => true) do %>
  <%= file_field_tag 'test_cases_zip', :id => "file-form"%>
  <%= submit_tag 'Add zipped test cases' %>
<% end %>
</p>

<%= link_to 'Show test cases', test_cases_path(:problem_id => @problem.id) %> |
<%= link_to 'Add test case', new_test_case_path(:problem_id => @problem.id) %> |
<%= link_to 'Show', @problem %> |
<%= link_to 'Back', problems_path %>
