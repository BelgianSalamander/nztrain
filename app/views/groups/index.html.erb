<% content_for :title, "Groups" %>
<div id="main-page-title">Listing groups</div>

<table class="main_table" >
  <tr>
    <th>Name</th>
    <th></th>
    <% if can? :update, Group %>
      <th></th>
    <% end %>
    <% if can? :destroy, Group %>
      <th></th>
    <% end %>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.name %></td>
    <td><%= link_to 'Show', group %></td>
    <% if can? :update, Group %>
      <td><%= link_to 'Edit', edit_group_path(group) if can? :update, group %></td>
    <% end %>
    <% if can? :destroy, Group %>
      <td><%= link_to 'Destroy', group, :data => { :confirm => 'Are you sure?' }, :method => :delete if can? :destroy, group %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, Group %>
  <%= link_to 'New Group', new_group_path %>
<% end %>
