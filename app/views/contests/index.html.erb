<div id="main-page-title">Listing contests</div>

<table class="main_table">
  <tr>
    <th>Title</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Duration</th>
    <th>User</th>
    <th>Score</th>
    <th></th>
    <% if current_user.is_admin %>
      <th></th>
      <th></th>
    <% end %>
  </tr>

<% @contests.each do |contest| %>
  <tr>
    <td><%= contest.title %></td>
    <td><%= contest.start_time.strftime("%b %d, %H:%M") %></td>
    <td><%= contest.end_time.strftime("%b %d, %H:%M") %></td>
    <td><%= contest.duration %></td>
    <td><%= contest.user_id %></td>
    <td><%= contest.get_score(current_user) %></td>
    <td>
      <% if contest.is_running? && (contest.get_relation(current_user) == nil) %>
        <% if current_user.is_admin %>
          <%= link_to 'Start', new_contest_relation_path(:contest => contest.id) %>
          <%= link_to 'Show', contest %>
        <% else %>
          <%= link_to 'Start Contest', new_contest_relation_path(:contest => contest.id) %>
        <% end %>
      <% else %>
        <%= link_to 'Show', contest %>
      <% end %>
    </td>
    <% if current_user.is_admin %>
      <td><%= link_to 'Edit', edit_contest_path(contest) %></td>
      <td><%= link_to 'Destroy', contest, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if current_user.is_admin %>
  <%= link_to 'New Contest', new_contest_path %>
<% end %>
