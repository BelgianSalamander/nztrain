<h1>Listing contests</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Duration</th>
    <th>User</th>
    <th>Score</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contests.each do |contest| %>
  <tr>
    <td><%= contest.title %></td>
    <td><%= contest.start_time.strftime("%b %d, %H:%M") %></td>
    <td><%= contest.end_time.strftime("%b %d, %H:%M") %></td>
    <td><%= contest.duration %></td>
    <td><%= contest.user_id %></td>
    <td><%= contest.get_score(current_user) %></td>
    <td>
      <% if current_user.is_admin || contest.get_relation(current_user) %>
        <%= link_to 'Show', contest %>
      <% else %>
        <%= link_to 'Start Contest', new_contest_relation_path(:contest => contest.id) %> 
      <% end %>
    </td>
    <td><%= link_to 'Edit', edit_contest_path(contest) %></td>
    <td><%= link_to 'Destroy', contest, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

