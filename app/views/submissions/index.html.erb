<% content_for :title, "Submissions" %>
<% if current_user.id.to_s == params[:by_user] %>
  <div id="main-page-title-box"><h1>My submissions</h1></div>
<% else %>
  <div id="main-page-title-box"><h1>Listing submissions</h1></div>
  <% if current_user.is_admin? && !params[:by_user].nil?
       u = User.find(params[:by_user]) %>
    <p><b>User:</b> <%= link_to u.handle, u %></p>
  <% end %>
<% end %>
<% if params[:by_problem] && !params[:by_problem].nil?
     p = Problem.find(params[:by_problem]) %>
  <p><b>Problem:</b> <%= link_to p.title, p %></p>
<% end %>
<%= ajax_section :id => "page" %>
